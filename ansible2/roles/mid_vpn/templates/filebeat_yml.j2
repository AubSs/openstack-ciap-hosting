# configured for {{ ec2_stage }}_{{ ec2_fonction }} EC2 instance
filebeat.inputs:
- type: log
  enabled: true
  paths:
    - "{{ v_log_path }}/openvpn.log"
  fields:
        log_type: vpn_connect
        az : "{{ ec2_availabilityzone }}"
        ciap : "{{ ec2_aws_cloudformation_stack_name }}"
        bl : "{{ ec2_bl }}"
        env : "{{ ec2_env }}"
        fonction : "{{ ec2_fonction }}"
        region : "{{ ec2_region }}"
        stage : "{{ ec2_stage }}"
        hostname: "{{ ec2_name }}"
        genre: "openvpn"
  include_lines: ['(.*)({{ ec2_aws_cloudformation_stack_name }}-Client-)(.*)@(.*)\/(.*) (SENT CONTROL)(.*)']

- type: log
  enabled: true
  paths:
    - "{{ v_log_path }}/openvpn.log"
  fields:
        log_type: vpn_disconnect
        az : "{{ ec2_availabilityzone }}"
        ciap : "{{ ec2_aws_cloudformation_stack_name }}"
        bl : "{{ ec2_bl }}"
        env : "{{ ec2_env }}"
        fonction : "{{ ec2_fonction }}"
        region : "{{ ec2_region }}"
        stage : "{{ ec2_stage }}"
        hostname: "{{ ec2_name }}"
        genre: "openvpn"
  include_lines: ['(.*)({{ ec2_aws_cloudformation_stack_name }}-Client-)(.*)@(.*)\/(.*) (SIGUSR1)(.*)']

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

setup.template.settings:
  index.number_of_shards: 3

output.logstash:
  hosts: ["{{ ec2_low_met_private_dns_names }}:{{ v_metrology_logstash_port }}"]
  ssl.enabled: true
  ssl.certificate: "{{ v_certificates_path }}/filebeat.crt"
  ssl.key: "{{ v_certificates_path }}/filebeat.key" 
  ssl.verification_mode: none

logging.level: error
logging.selectors: ["*"]
logging.metrics.enabled : false
