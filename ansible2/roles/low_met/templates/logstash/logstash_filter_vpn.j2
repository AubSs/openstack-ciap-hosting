  if [fields][log_type] == "vpn_connect" {
     grok {
           match => [ "message" , "%{SYSLOGTIMESTAMP:timestamp} %{DATA} %{DATA:stack}-Client-%{DATA:name}@%{DATA:domain}/%{IPORHOST:source_ip}:%{DATA:source_port} SENT CONTROL %{GREEDYDATA}" ]
