           add_field => [ "hostname", "%{[fields][hostname]}" ]
           add_field => [ "genre", "%{[fields][genre]}" ]
           add_field => [ "connect", "0" ]
     }
     mutate {
       gsub => [ "database", "\.", "_" ]
     }
  }
